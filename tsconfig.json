{
  "compilerOptions": {
    "outDir": "./dist",  // Certifique-se de que o arquivo compilado vai para a pasta dist
    "rootDir": "./",     // Garante que todos os arquivos sejam inclu√≠dos
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"]
  },
  "include": ["./**/*.ts"], // Inclui todos os arquivos TypeScript
  "exclude": ["node_modules"]
}
