{
  "compilerOptions": {
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",  // Set rootDir to the project root
    "lib": ["es6", "dom"]
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "models/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
  